<% layout('/layouts/boilerplate') -%>
 
<div class="row mt-3">
    <h2 class="col-6 offset-3 mb-3">SignUp on StayCation</h2>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <!-- username -->
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input type="username" name="username" id="username" placeholder="enter a username" class="form-control" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <!-- email -->
            <div class="mb-3">
                <label for="email" class="form-label">email</label>
                <input type="email" name="email" id="email" placeholder="enter your email" class="form-control" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <!-- password -->
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input type="password" name="password" id="password" placeholder="brainstorm a password" class="form-control" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <button class="btn btn-dark add-btn">SignUp</button>
        </form>
    </div>
</div>
<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
    <h3 class="col-6 offset-3 mb-3">Log In to Continue Your Staycation!</h3>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <!-- username -->
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input type="username" name="username" id="username" placeholder="enter your username" class="form-control" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <!-- password -->
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input type="password" name="password" id="password"  class="form-control" required>
                <div class="valid-feedback">Looks Good</div>
            </div>
            <button class="btn btn-dark add-btn">Login</button>
        </form>
    </div>
</div>